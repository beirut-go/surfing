             <h3 class="good_e">
               <%= @test.thirdword %>
             </h3>
             <span class="h3-style01"></span>
          </div>
          <!-- 内容 -->
          <div class="faster" style="display: block; margin-top: 20px; margin-bottom: 40px;">
             <%= @test.description %>
          </div>
          
           <!-- 広告 -->
          <div class="gostraight" style="display: inline-block; position: relative; margin-top: 0px; ">
             <span  class="power" ><i class="fas fa-book" style="margin-left: 8px; margin-top: 8px; color: #fff; font-size: 1.25rem;" style="margin-left: 15px;"></i>
