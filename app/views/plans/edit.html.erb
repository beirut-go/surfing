<div class="contents row">
    <%= form_tag("/plans/#{@plan.id}", method: :patch ) do %>
      <h3>
        編集する
      </h3>
      <input placeholder="Title" type="text" name="title" value="<%= @plan.title %>" autofocus="true">
      <input placeholder="Image Url" type="text" name="image" value="<%= @plan.image %>" autofocus="true">
      <input placeholder="How many hours" type="integer" name="times" value="<%= @plan.times %>" autofocus="true">
      <div class="container">
       <div class="row">
        <div class='col-sm-6'>
            <input type='text' class="form-control" id='datetimepicker4' />
        </div>
        <script type="text/javascript">
            $(function () {
                $('#datetimepicker4').datetimepicker();
            });
        </script>
       </div>
      </div>
      <textarea cols="30" name="contents" placeholder="content" rows="10"><%= @plan.contents %></textarea>
      <input type="submit" value="SENT">
    <% end %>
</div>